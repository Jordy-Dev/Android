<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título de la app -->
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONVERSOR DE UNIDADES"
        android:textSize="24sp"
        android:textAlignment="center"
        android:paddingBottom="20dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Conversión de temperatura -->
    <TextView
        android:id="@+id/label_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir Temperatura 🌡️:"
        android:textSize="18sp"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/input_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el valor"
        android:inputType="numberDecimal" />

    <!-- LinearLayout horizontal para los spinners y botón -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Spinner
            android:id="@+id/spinner_temperature_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_temperature_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_convert_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/verde"
            android:text="Convertir" />

        <!-- Resultado al lado del botón -->
        <TextView
            android:id="@+id/result_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="16sp"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Conversión de moneda -->
    <TextView
        android:id="@+id/label_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir Moneda 🤑:"
        android:textSize="18sp"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/input_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese monto"
        android:inputType="numberDecimal" />

    <!-- LinearLayout horizontal para los spinners de moneda -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Spinner
            android:id="@+id/spinner_currency_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_currency_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_convert_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/amarillo"
            android:text="Convertir" />

        <!-- Resultado al lado del botón -->
        <TextView
            android:id="@+id/result_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="16sp"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Conversión de longitud -->
    <TextView
        android:id="@+id/label_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir Longitud 📏:"
        android:textSize="18sp"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/input_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese valor"
        android:inputType="numberDecimal" />

    <!-- LinearLayout horizontal para los spinners de longitud -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Spinner
            android:id="@+id/spinner_length_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner_length_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_convert_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/celeste"
            android:text="Convertir" />

        <!-- Resultado al lado del botón -->
        <TextView
            android:id="@+id/result_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado:"
            android:textSize="16sp"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIMPIAR"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>
